{{ 'my-test.css' | asset_url | stylesheet_tag }}

{% schema %}
  {
    "name": "Test Hero Section",
    "tag": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "hero_tagline",
        "label": "Tagline",
        "default": "The Gift Guide"
      }, {
        "type": "text",
        "id": "hero_description",
        "label": "Tagline",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      }, {
        "type": "text",
        "id": "hero_button_text",
        "label": "Button Text",
        "default": "Choose Gift"
      }, {
        "type": "text",
        "id": "below_hero_text",
        "label": "Below Hero Text",
        "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
      }
    ],
    "presets": [
      {
        "name": "My Test Hero",
        "category": "Section"
      }
    ]
  }
{% endschema %}


<section>
  <div class="container">
    <div class="hero-image">
      <div class="background-image" style="background-image: url('{{ 'Frame.png' | asset_url }}')">
        <div class="overlay-text">
          <h2>{{ section.settings.hero_tagline }}</h2>
          <p>
            {{ section.settings.hero_description }}
          </p>
          <div class="mobile-overlay-text-btn">
            <button class="btn-black">
              <span class="btn-text">{{ section.settings.hero_button_text }}</span>
              <span class="btn-icon">
                <svg
                  width="26"
                  height="12"
                  viewBox="0 0 26 12"
                  fill="black"
                  xmlns="http://www.w3.org/2000/svg">
                  <path d="M1.22205 4.80469L0.472046 4.80469L0.472046 6.30469L1.22205 6.30469L1.22205 4.80469ZM25.7524 6.08502C26.0453 5.79213 26.0453 5.31725 25.7524 5.02436L20.9794 0.251388C20.6865 -0.0415053 20.2116 -0.0415053 19.9187 0.251388C19.6259 0.544281 19.6259 1.01916 19.9187 1.31205L24.1614 5.55469L19.9187 9.79733C19.6259 10.0902 19.6259 10.5651 19.9187 10.858C20.2116 11.1509 20.6865 11.1509 20.9794 10.858L25.7524 6.08502ZM1.22205 6.30469L25.222 6.30469L25.222 4.80469L1.22205 4.80469L1.22205 6.30469Z" />
                </svg>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="hero-below-section">
    <div class="container">
      <p style="text-align: center">
        {{ section.settings.below_hero_text }}
      </p>
    </div>
  </div>
</section>